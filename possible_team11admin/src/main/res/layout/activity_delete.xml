<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:padding="20dp"
    tools:context=".Activities.DeleteActivity">

    <Button
        android:id="@+id/deleteContestBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:padding="20sp"
        android:text="Delete Contest"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteNews"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20sp"
        android:text="Edit &amp; Delete News"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/deleteContestBtn"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/deleteContestBtn"
        app:layout_constraintTop_toBottomOf="@+id/deleteContestBtn" />

    <Button
        android:id="@+id/deleteFootballData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20sp"
        android:text="Edit &amp; Delete Football match"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/deleteNews"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/deleteNews"
        app:layout_constraintTop_toBottomOf="@+id/deleteNews" />

    <Button
        android:id="@+id/deleteCricketData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20sp"
        android:text="Edit &amp; Delete Cricket match"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/deleteFootballData"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/deleteFootballData"
        app:layout_constraintTop_toBottomOf="@+id/deleteFootballData" />
</androidx.constraintlayout.widget.ConstraintLayout>